<h1>Dodawanie Kontaktu</h1>

<form asp-controller="Contact" asp-action="Create" method="post">

    <label asp-for="Name" class="d-block"></label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>

    <label asp-for="Email" class="d-block"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Phone" class="d-block"></label>
    <input asp-for="Phone" class="form-control"/>
    <span asp-validation-for="Phone" class="text-danger"></span>

    <label asp-for="Birth" class="d-block"></label>
    <input asp-for="Birth" class="form-control"/>
    <span asp-validation-for="Birth" class="text-danger"></span>

    <button type="submit" class="btn btn-primary">Save</button>

</form>
