@model IEnumerable<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Kontakty</h1>
<a asp-controller="Contact" asp-action="Create" class="btn btn-secondary">Dodaj kontakt</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Email
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var contact in Model)
        {
           <tr>
               <td>
                   @contact.Name
               </td>
               <td>
                   @contact.Email
               </td>
               <td>
                   <a class="btn btn-secondary" asp-controller="Contact" action="Update" asp-route-id=@contact.Id>Edytuj</a>
                   <a class="btn btn-secondary" asp-controller="Contact" action="Delete" asp-route-id=@contact.Id>Usuń</a>
                   <a class="btn btn-secondary" asp-controller="Contact" action="Details" asp-route-id=@contact.Id>Szczegóły</a>
               </td>
           </tr> 
        }
    </tbody>
</table>
